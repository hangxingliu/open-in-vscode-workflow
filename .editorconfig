root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[info.plist]
indent_size = 4
indent_style = tab

[*.{yaml,yml}]
indent_size = 2
indent_style = space
